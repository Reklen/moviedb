<% title(@movie.title, "Movies") %>

<div id="movie">
  <header>

    <h1><%= @movie.title %></h1>

    <ul class="actions">
      <% if policy(@movie).edit?  %>
        <li><%= link_to "Edit Movie", edit_movie_path(@movie),
              class: "edit" %></li>
      <% end %>

      <% if policy(@movie).destroy?  %>
        <li><%= link_to "Delete Movie", movie_path(@movie),
            method: :delete,
           data: { confirm: "Are you sure you want to delete this movie?"},
            class: "delete" %></li>
       <% end %>
    </ul>
  </header>

  <p>Description: <%= simple_format(@movie.text) %></p>

  <% if @movie.picture.present? %>
    <div class="picture">
      <%= image_tag @movie.picture.medium.url, class: "img-thumbnail" %>
    </div>
  <% end %>

  <% if @movie.categories.any? %>
    <p>
    Categories: 

    <ul>
      <% @movie.categories.each do |category| %>
        <li><%= category %></li>
      <% end %>
    </ul>
    </p>
  <% end %>

  <header>
    <h3>Comments</h3>
  </header>

  <div id="comments">
    <% if @movie.comments.persisted.any? %>
      <%= render @movie.comments.persisted %>
    <% else %>
      <p>There are no comments for this ticket.</p>
    <% end %>
  </div>

  <% if policy(@comment).create? %>
    <%= render "comments/form", movie: @movie, comment: @comment %>
  <% end %>
</div>
